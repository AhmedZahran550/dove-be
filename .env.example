# =============================================================================
# DOVA Backend - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Railway will inject environment variables automatically from settings

# =============================================================================
# APPLICATION
# =============================================================================
# Port (Railway injects this automatically)
PORT=4000

# Environment (production, staging, development)
NODE_ENV=production

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend.com
PRODUCTION_FRONTEND_URL=https://your-frontend.com

# =============================================================================
# DATABASE (Railway PostgreSQL provides DATABASE_URL)
# =============================================================================
# Railway PostgreSQL addon provides this URL automatically
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Optional: For local development with individual credentials
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=dova
# DATABASE_USERNAME=postgres
# DATABASE_PASSWORD=your_password

# Database options
DB_LOGGING=false
DB_SYNC=false

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate strong secrets for production: openssl rand -base64 64
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d
JWT_RESET_SECRET=your-super-secret-reset-key-min-32-chars
JWT_RESET_EXPIRES_IN=1h

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOW_LIST=https://your-frontend.com

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=false
CACHE_STORE_TYPE=memory
CACHE_TTL=120000

# Redis (optional, for production caching)
# REDIS_HOST=
# REDIS_PORT=
# REDIS_PASSWORD=
# REDIS_DB=

# =============================================================================
# STRIPE (if using payments)
# =============================================================================
# STRIPE_SECRET_KEY=sk_live_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# =============================================================================
# OTHER
# =============================================================================
POINTS_TO_BALANCE_CONVERTION_RATE=0.1
FALLBACK_LANGUAGE=en
