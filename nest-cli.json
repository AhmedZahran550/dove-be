{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "src/main",
  "compilerOptions": {
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true, "outDir": "dist/src/" },
      {
        "include": "templates/**/*.hbs",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "config/env/**/*.env",
        "watchAssets": true,
        "outDir": "dist/src"
      }
    ]
  }
}
